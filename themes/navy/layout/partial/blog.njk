<li class="plugin on" id="{{ plugin.name }}">


  {% if plugin.video%}
    <div class="video-wrapper">
      <iframe width="100%" src="{{plugin.video}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
    <br>
 {% else %}
  <div class="plugin-screenshot">
    <noscript>
      <img src="{{ url_for('blogs/images/' + plugin.name + '.svg') }}" class="plugin-screenshot-img" alt="{{ plugin.name }}">
    </noscript>
    <img data-src="{{ url_for('blogs/images/' + plugin.name + '.svg') }}" data-sizes="auto" class="plugin-screenshot-img lazyload" alt="{{ plugin.name }}" data-zoom-src="{{ url_for('blogs/screenshots/' + plugin.name + '.svg') }}" data-zoomable>
    {% if plugin.preview %}
      <div class="plugin-screenshot-mask"><i class="fa fa-eye"></i></div>
    {% endif %}
  </div>
  {% endif %}
  
  {% if "{{ local_link('plugin.link') }}" %}
  <a href="{{ plugin.link }}" class="plugin-name">{{ plugin.title }} <i class="fa fa-external-link"></i></a>
  {% else %}
  <a href="{{ plugin.link }}" class="plugin-name" target="_blank">{{ plugin.title }} <i class="fa fa-external-link"></i></a>
  {% endif %}
  {# {% if plugin.preview %}
    <div class="plugin-preview-wrap">
      <a href="{{ plugin.preview }}" class="plugin-preview-link" target="_blank">{{ plugin.description }}<i class="fa fa-external-link"></i></a>
    <div>
  {% endif %} #}
  {% if plugin.subtitle%}
  <p class="plugin-desc">{{ plugin.subtitle }}</p>
  {% endif %}
  {% if plugin.description%}
  <p class="plugin-desc">{{ plugin.description }}</p>
  {% endif %}
  <p class="plugin-desc">BY {{ plugin.author }}</p>
  <p class="plugin-desc">{{ plugin.date }}</p>
  <div class="plugin-tag-list">
    {% for tag in plugin.tags %}
      <a href="#{{ tag }}" class="plugin-tag">{{ tag }}</a>
    {% endfor %}
  </div>
</li>
