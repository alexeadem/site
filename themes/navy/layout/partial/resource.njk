<li class="plugin on" id="{{ plugin.name }}">
  <div class="plugin-screenshot">
    <noscript>
      <img src="{{ url_for('resources/images/' + plugin.name + '.svg') }}" class="plugin-screenshot-img-svg" alt="{{ plugin.name }}">
    </noscript>
    <img data-src="{{ url_for('resources/images/' + plugin.name + '.svg') }}" data-sizes="auto" class="plugin-screenshot-img-svg lazyload" alt="{{ plugin.name }}" data-zoom-src="{{ url_for('resources/images/' + plugin.name + '.svg') }}" data-zoomable>
    {% if plugin.preview %}
      <div class="plugin-screenshot-mask"><i class="fa fa-eye"></i></div>
    {% endif %}
  </div>
  <a href="{{ plugin.link }}" class="plugin-name">{{ plugin.title }} <i class="fa fa-external-link"></i></a>
  {# {% if plugin.preview %}
    <div class="plugin-preview-wrap">
      <a href="{{ plugin.preview }}" class="plugin-preview-link"> Visit preview site <i class="fa fa-external-link"></i></a>
    <div>
  {% endif %} #}
  {% if plugin.description %}
  <p class="plugin-desc">{{ plugin.description }}</p>
  {% endif %}
  <div class="plugin-tag-list">
    {% for tag in plugin.tags %}
      <a href="#{{ tag }}" class="plugin-tag">{{ tag }}</a>
    {% endfor %}
  </div>
</li>
